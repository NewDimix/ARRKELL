.advantages
    text-align center

    &__list
        text-align left
        {ibt}
        padding-left 0
        list-style none
        color white

        li
            position relative
            padding-left 58px
            margin-bottom 61px
            font-size 21px
            font-weight 400

            &:before
                content ''
                width 38px
                height 38px
                position absolute
                left 0
                top 50%
                transform translateY(-50%)
                background-image inline('advantages-icon.png')
                background-repeat no-repeat
                background-position center
                background-size contain

            &:last-child
                margin-bottom 0

        strong
            font-size 23px
            text-transform uppercase
            font-weight 700

