.section
    padding-top 27px
    padding-bottom 42px

    @media (min-width 480px)
        padding-top 32px
        padding-bottom 52px

    @media (min-width 820px)
        padding-top 37px
        padding-bottom 62px

    @media (min-width 992px)
        padding-top 42px
        padding-bottom 72px

    &__title
        margin-bottom 25px
        text-align center
        text-transform uppercase

        @media (min-width 480px)
            margin-bottom 31px

        @media (min-width 820px)
            margin-bottom 37px

        @media (min-width 992px)
            margin-bottom 43px

        &_white
            color white

        h2
            font-weight 700
            font-size 25px
            margin-top 0
            margin-bottom 0

            @media (min-width 480px)
                font-size 28px

            @media (min-width 820px)
                font-size 31px

            @media (min-width 992px)
                font-size 34px

            @media (min-width 1265px)
                font-size 37px
