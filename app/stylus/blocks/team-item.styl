.team-item
    text-align center

    &__img
        height 220px
        margin-bottom 16px

        @media (min-width 480px)
            height 350px

        @media (min-width 768px)
            height 194px

    &__name
        text-transform uppercase
        font-size 20px
        margin-bottom 8px
        font-weight 700

    &__post
        font-size 20px
        font-style italic
        color #6b6b6b
        margin-bottom 14px

    hr
        max-width 171px
        background-color black
        height 1px
        border none
        margin-top 0
        margin-bottom 11px

    &__text
        font-size 12px

        @media (min-width 768px)
            height 84px

    .mCSB_scrollTools
        width 6px

    .mCSB_inside>.mCSB_container
        margin-right 13px
