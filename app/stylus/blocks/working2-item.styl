.working2-item
    position relative

    &:nth-child(1)
        .working2-item__icon-wrap
            background-image inline('color-dec-1-4.png')

    &:nth-child(2)
        .working2-item__icon-wrap
            background-image inline('color-dec-2-4.png')

    &:nth-child(3)
        .working2-item__icon-wrap
            background-image inline('color-dec-3-4.png')

    &:nth-child(4)
        .working2-item__icon-wrap
            background-image inline('color-dec-4-4.png')

    &:nth-child(2n)
        .working2-item__icon-after
            @media (min-width 550px)
                display none

            @media (min-width 768px)
                {ibt}

    &:nth-child(3n)
        .working2-item__icon-after
            @media (min-width 768px)
                display none

            @media (min-width 1050px)
                {ibt}

    &__icon-wrap
        {ibt}
        font-size 56px
        color #5b5b5b
        line-height 0
        width 100px
        height 100px
        margin-bottom 38px
        position relative
        background-repeat no-repeat
        background-position center
        background-size contain

        span
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)

    &__title
        text-transform uppercase
        font-size 16px
        margin-bottom 10px

        h3
            margin-top 0
            margin-bottom 0

    hr
        width 107px
        height 3px
        background-color black
        margin-top 0
        margin-bottom 10px
        border none

    &__text
        font-size 14px
        padding-left 15px
        padding-right 15px

    &__icon-after
        position absolute
        right 0
        top 50px
        transform translate(50%, -50%)

        span
            display none
            width 8px
            height 8px
            border-radius 50%

            @media (min-width 550px)
                {ibt}

            &:not(:last-child)
                margin-right 3px

            &:first-child
                background-color #727271

            &:nth-child(2n)
                background-color #939393

            &:nth-child(3n)
                background-color #b1b2b3

            &:nth-child(4n)
                background-color #cfd0d0

            &:nth-child(5n)
                background-color #ebecec
