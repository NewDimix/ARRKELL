.header
    position relative
    height 100%
    text-align center
    background-position center top
    background-repeat no-repeat
    background-size cover
    padding-top 15px
    padding-bottom 15px

    @media (min-width 480px)
        padding-top 20px
        padding-bottom 20px

    @media (min-width 600px)
        text-align right

    @media (min-width 768px)
        padding-top 25px
        padding-bottom 25px

    @media (min-width 992px)
        padding-top 30px
        padding-bottom 30px

    &__logo
        float left
        margin-top -5px

    &__menu
        padding-left 0
        margin-left 200px


