.working3-item
    font-size 0
    position relative
    display none

    &__img
        height 200px
        background-position center
        background-size cover
        background-repeat no-repeat

        @media (min-width 480px)
            height 300px

        @media (min-width 768px)
            position absolute
            left 0
            top 0
            width 50%
            height 100%

    &__content
        background-color #ff8c04
        color white
        padding .8em 1.05em
        font-size 26px

        @media (min-width 480px)
            font-size 30px

        @media (min-width 768px)
            margin-left 50%
            min-height 300px
            font-size 34px

        @media (min-width 992px)
            font-size 38px

        hr
            border none
            height 2px
            background-color #fff
            width 30%
            margin-left 0
            margin-bottom .6em

    &__title
        margin-bottom .4em
        font-size 1em

        h3
            margin-top 0
            margin-bottom 0

    &__text
        font-size .5em
        width 80%
