.control-item
    &:nth-child(1)
        .control-item__icon
            background-image inline('control-icon1.png')

    &:nth-child(2)
        .control-item__icon
            background-image inline('control-icon2.png')

    &:nth-child(3)
        .control-item__icon
            background-image inline('control-icon3.png')

    &__icon
        height 85px
        width 85px
        margin-left auto
        margin-right auto
        border-radius 50%
        border 2px solid black
        background-repeat no-repeat
        background-position center
        background-size 50%
        margin-bottom 20px

    &__title
        font-size 16px
        text-transform uppercase
        margin-bottom 17px

    hr
        border none
        background-color black
        height 2px
        width 50%
        margin-bottom 10px

    &__text
        font-size 12px
        padding-left 20px
        padding-right 20px
