.request
    background rgba(255,159,16,1)
    background linear-gradient(to right, rgba(255,159,16,1) 0%, rgba(248,210,72,1) 49%, rgba(212,212,78,1) 81%, rgba(212,212,78,1) 100%)

    &__form
        font-size 0
        text-align center

    &__form-row
        display block
        width 100%
        margin-bottom 15px

        @media (min-width 520px)
            {ibt}
            width 40%
            margin-right 2%
            margin-left 2%
            margin-bottom 20px

        @media (min-width 768px)
            width 29.3333%
            margin-bottom 0

        &:last-child
            margin-bottom 0

    input
        display block
        font-size 16px
        border none
        border-radius 4px
        text-align center
        padding-left 15px
        padding-right 15px
        box-shadow 3px 3px 8px 0 rgba(0, 0, 0, 0.3)
        height 45px
        width 100%
        margin-left auto
        margin-right auto
        max-width 300px
        transition all .1s ease

        @media (min-width 520px)
            {ibm}
            height 50px

        @media (min-width 768px)
            height 55px

        @media (min-width 992px)
            height 60px

        &:focus
            outline none
            box-shadow 0 0 0 2px #6cb94d

        &:last-child
            margin-bottom 0

    input[type=submit]
        background-color #6cb94d
        font-size 29px
        color white
        font-family Calibri, arial, verdana, sans-serif
        font-weight 700
        cursor pointer
        min-width 230px

        @media (min-width 768px)
            min-width 0

        &:hover
            background-color #5dac3e

        &:focus
            outline none
            box-shadow 0 0 0 2px white

        &:active
            transform scale(.96)

    .help-block
        font-size 18px
        margin-top 5px
