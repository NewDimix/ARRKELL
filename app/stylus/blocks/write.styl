.write
    background-color white
    background-image url(../img/write-bg.png)
    background-position center
    background-repeat no-repeat
    background-size cover
    text-align center

    @media (min-width 768px)
        text-align left

    .container
        min-height 603px

    &__top-content
        position relative
        margin-bottom 38px
        text-align center

        @media (min-width 768px)
            padding-right 420px
            text-align left
            margin-bottom 78px

        .section__title
            text-align center

            @media (min-width 768px)
                text-align left

    &__subtitle
        text-transform uppercase
        font-size 21px
        margin-bottom 30px

        @media (min-width 480px)
            font-size 25px

        @media (min-width 768px)
            margin-bottom 0
            font-size 29px

    &__form
        display block
        background-color rgba(0, 0, 0, 0.5)
        padding 35px 21px
        max-width 385px
        border-radius 4px
        margin-left auto
        margin-right auto

        @media (min-width 768px)
            position absolute
            right 0
            top 0
            margin-left 0
            margin-right 0

        h3
            margin-top 0
            margin-bottom 37px
            color white
            font-weight 700
            font-size 29px
            text-align center

        input, textarea
            display block
            margin-left auto
            margin-right auto
            width 100%
            background-color white
            border-radius 4px
            font-size 21px
            padding-left 17px
            padding-right 17px
            transition all .3s ease

            &:focus
                outline none

        input
            height 53px
            border-top 2px solid transparent
            border-left 2px solid transparent
            border-bottom 2px solid transparent
            border-right none

        textarea
            height 153px
            padding-top 17px
            padding-bottom 17px
            resize none
            border 2px solid transparent

            &:focus
                outline none
                border 2px solid #ff7f00

        input[type=submit]
            margin-bottom 0
            max-width 210px
            background-color #ff7e00
            color white
            text-transform uppercase
            cursor pointer

            &:hover
                background-color #ed7400

            &:focus
                outline none
                box-shadow 0 0 0 2px white

    &__form-row
        margin-bottom 19px

        &:last-child
            margin-bottom 0

    &__caption
        font-size 21px

    &__text
        font-weight 700
        font-size 29px
        margin-bottom 28px

        a
            color black
            transition all .15s ease

            &:hover, &:focus
                color #ed7400

    &__input
        position relative
        padding-right 53px

        &_user
            .write__input-icon
                background-image inline('user-icon.svg')

        &_email
            .write__input-icon
                background-image inline('mail-icon.svg')

        input
            padding-right 20px
            border-top-right-radius 0
            border-bottom-right-radius 0

            &:focus
                border-top 2px solid #ff7f00
                border-left 2px solid #ff7f00
                border-bottom 2px solid #ff7f00

                &+.write__input-icon
                    border-top 2px solid #ff7f00
                    border-right 2px solid #ff7f00
                    border-bottom 2px solid #ff7f00

    &__input-icon
        position absolute
        right 0
        top 0
        height 53px
        background-color white
        width 55px
        border-top-right-radius 4px
        border-bottom-right-radius 4px
        background-position center
        background-repeat no-repeat
        background-size 50%
        border-top 2px solid transparent
        border-right 2px solid transparent
        border-bottom 2px solid transparent
        transition all .3s ease

    .help-block
        color white
        font-size 18px
        margin-top 2px
        text-align center
