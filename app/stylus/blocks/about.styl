.about
    &__text
        max-width 740px
        margin-left auto
        margin-right auto
        text-align center
        color white
        text-transform uppercase
        font-size 17px
        position relative
        padding 40px 25px

    &__border
        width 15px
        height 81px
        background-color #1ee9a3
        opacity .33
        position absolute

        &:after
            content ''
            width 66px
            height 15px
            background-color inherit
            position absolute

        &:first-child
            left 0
            top 0

            &:after
                left 100%
                top 0

        &:nth-child(2)
            right 0
            top 0

            &:after
                right 100%
                top 0

        &:nth-child(3)
            left 0
            bottom 0

            &:after
                left 100%
                bottom 0

        &:last-child
            right 0
            bottom 0

            &:after
                right 100%
                bottom 0

