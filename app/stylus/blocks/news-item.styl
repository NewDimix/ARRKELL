.news-item
    &__title
        font-size 20px
        text-transform uppercase
        text-align left

        h3
            margin-top 0
            margin-bottom 0

    &__row
        position relative
        padding-top 15px
        padding-bottom 15px

    &__date
        display block
        color white
        background-color #6cb94d
        font-size 17px
        text-transform uppercase
        position absolute
        left 0
        top 50%
        transform translateY(-50%)
        padding 4px 15px

    &__subtitle
        font-size 12px
        color #797979
        margin-left 106px
        text-align left

    &__img
        height 200px
        margin-bottom 15px

        @media (min-width 480px)
            height 300px

        @media (min-width 768px)
            height 178px

    &__text
        font-size 12px
        text-align left
        margin-bottom 8px
        max-height 113px

    &__btn
        text-align right

        a
            {ibt}
            background-color #ff7e00
            font-size 12px
            text-transform uppercase
            padding 6px 16px
            color white
            text-decoration none
            transition all .3s ease

            &:hover
                background-color #ed7400

            &:focus
                outline none
                box-shadow 0 0 0 1px white, 0 0 0 2px #ed7400
