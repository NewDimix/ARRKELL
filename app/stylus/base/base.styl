html
    box-sizing border-box
    font-size 10px
    height 100%

*, *:before, *:after
    box-sizing inherit

body
    min-width 320px
    font-family Calibri, arial, verdana, sans-serif
    font-weight 400
    font-style normal
    line-height normal
    color black
    height 100%
    min-height auto
    min-height auto

    &.body_one-page
        display flex
        flex-direction column

        .main
            flex 1 0 auto

        .footer
            flex 0 0 auto

.page
    height 100%
    transition all .3s ease

    &_menu-open
        transform translateX(-100px)

        @media (min-width 600px)
            transform none !important

.container
    position relative
    max-width 1130px
    padding-left 10px
    padding-right 10px
    margin-left auto
    margin-right auto

p
    margin-top 0
    margin-bottom 20px

    &:last-child
        margin-bottom 0

